## Ejemplo de variables de entorno para Rifa
# Base de datos (Postgres) - si no se usan, la app usará sqlite fallback
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rifa_db
DB_USER=rifa_user
DB_PASSWORD=rifa_password

# Clave admin para endpoint de simulación
ADMIN_SIM_KEY=CLAVEADMIN

# ePayco (si aplica)
EPAYCO_PUBLIC_KEY=your_public_key
EPAYCO_PRIVATE_KEY=your_private_key

# Email (notificaciones)
EMAIL_SENDER=you@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# URLs base
BASE_URL=http://127.0.0.1:8080
RESPONSE_URL=http://127.0.0.1:8080/response
CONFIRMATION_URL=http://127.0.0.1:8080/confirmation
